local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
    Name = "Your Hub Name",
    LoadingTitle = "Loading UI...",
    LoadingSubtitle = "With Anto Chat Feature",
    ConfigurationSaving = {
        Enabled = true,
        FolderName = "YourHubConfig",
        FileName = "Settings"
    },
    Discord = {
        Enabled = false,
        Invite = "yourinvitecode",
        RememberJoins = true
    },
    KeySystem = false
})

local MainTab = Window:CreateTab("Main", 4483362458) -- Main tab
local MainSection = MainTab:CreateSection("Chat Controls")

-- Anto Chat Toggle
local AntoToggle = MainTab:CreateToggle({
    Name = "Anto Chat",
    CurrentValue = false,
    Flag = "AntoChatToggle",
    Callback = function(Value)
        _G.AntoChatEnabled = Value
        
        if Value then
            -- Start sending random messages when toggle is enabled
            Rayfield:Notify({
                Title = "Anto Chat",
                Content = "Enabled - Sending random messages",
                Duration = 3,
            })
            
            -- Random messages table
            local randomMessages = {
                "Hello everyone!",
                "How's it going?",
                "This game is fun!",
                "What are you all doing?",
                "Nice weather today!",
                "I'm Chat!",
                "Anyone want to team up?",
                "Check out this cool feature!",
                "Wow, amazing!",
                "Hello there!"
            }
            
            -- Message sending function
            local function sendRandomMessage()
                if not _G.AntoChatEnabled then return end
                
                local TextChatService = game:GetService("TextChatService")
                local textChannel = TextChatService:FindFirstChild("TextChannels")[citation:1]
                if textChannel then
                    textChannel = textChannel:FindFirstChild("RBXGeneral")
                    if textChannel then
                        local randomIndex = math.random(1, #randomMessages)
                        local selectedMessage = randomMessages[randomIndex]
                        textChannel:SendAsync(selectedMessage)
                    end
                end
            end
            
            -- Create loop for sending messages
            task.spawn(function()
                while _G.AntoChatEnabled and task.wait(10) do -- Adjust delay as needed
                    sendRandomMessage()
                end
            end)
        else
            -- Notify when disabled
            Rayfield:Notify({
                Title = "Anto Chat",
                Content = "Disabled - No longer sending messages",
                Duration = 3,
            })
        end
    end,
})

-- Optional: Add a slider to control message frequency
local FrequencySlider = MainTab:CreateSlider({
    Name = "Message Frequency",
    Range = {5, 60},
    Increment = 5,
    Suffix = "seconds",
    CurrentValue = 10,
    Flag = "MessageFrequency",
    Callback = function(Value)
        _G.MessageFrequency = Value
    end,
})
